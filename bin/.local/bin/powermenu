#!/bin/sh
# switch power state using dmenu(1)

selection=$(printf 'lock\npoweroff\nreboot\nsuspend' | menu -f -i -l 4)

case "${selection}" in
	lock)
		slock
		;;
	reboot)
		SUDO_ASKPASS=$HOME/.bin/askpass sudo reboot
		;;
	poweroff)
		SUDO_ASKPASS=$HOME/.bin/askpass sudo shutdown -P now
		;;
	suspend)
		SUDO_ASKPASS=$HOME/.bin/askpass sudo systemctl suspend
		;;
esac
